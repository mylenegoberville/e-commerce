<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ 'welcome'|trans }}{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
<body>
    <nav>
        <ul>
            <li><a href="{{path('app_accueil')}}">{{ 'home'|trans }}</a></li>
            <li><a href="{{path('user_index')}}">{{ 'user.name'|trans }}</a></li>
            {% if app.user %}
                <li><a href="{{ path('user_edit_profile', {'id': app.user.id}) }}">{{ app.user.username }}</a>, <a href="{{ path('app_logout') }}">{{ 'register.register'|trans }}</a></li>
            {% else %}
                <li><a href="{{ path('app_login') }}">{{ 'login.login'|trans }}</a></li>
            {% endif %}

        </ul>

    </nav>
    <main class="container">
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <p class="alert alert-{{type}}">{{message}}</p>
            {% endfor %}
        {% endfor %}
        {% block body %}{% endblock %}
    </main>
</body>
</html>
