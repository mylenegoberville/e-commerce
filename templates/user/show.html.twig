{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{ 'user.name'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'user.id'|trans }}</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{{ 'user.email'|trans }}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{{ 'user.roles'|trans}}</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>{{ 'user.password'|trans}}</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">{{ 'button.back_to_list'|trans }}</a>
    <a href="{{ path('user_edit', {'id': user.id}) }}">{{ 'button.edit'|trans }}</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
